<div class="ui segment signup four column center aligned grid">
  <%= render 'shared/errors', obj: @user %>
    <%= form_with(model: @user, class: "ui form") do |form| %>
          <div class="field">
            <%= form.label :username, style: "display: flex" %>
            <%= form.text_field :username, placeholder: "Username" %>
          </div>

          <div class="field">
            <%= form.label :password, style: "display: flex" %>
            <%= form.password_field :password, placeholder: "Password" %>
          </div>

          <div class="field">
            <%= form.label :email, style: "display: flex" %>
            <%= form.email_field :email, placeholder: "Email" %>
          </div>

        <div class="field">
          <%= form.label :first_name, style: "display: flex" %>
          <%= form.text_field :first_name, placeholder: "First name" %>
        </div>

        <div class="field">
          <%= form.label :last_name, style: "display: flex"%>
          <%= form.text_field :last_name,  placeholder: "Last name"  %>
        </div>

      <div class="two column row">
        <%= form.label :bio, style: "display: flex" %>
        <%= form.text_area :bio, placeholder: "Enter your bio" %>
      </div>
      
      <br/>
      <div>
        <%= form.submit "Sign Up", class: "ui submit button" %>
      </div>
    <% end %>
</div>